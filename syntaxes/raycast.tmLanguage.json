{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "text.raycast",
  "injectionSelector": "L:source -comment -(string -meta.embedded)",
  "patterns": [
    {
      "patterns": [
        {
          "include": "#document"
        }
      ]
    }
  ],
  "repository": {
    "document": {
      "patterns": [
        {
          "match": "^//\\s*(@)(raycast)(\\.)(schemaVersion|title|mode|packageName|icon|iconDark|currentDirectoryPath|needsConfirmation|refreshTime|author|authorURL|description)\\s+(.*)",
          "captures": {
            "0": {
              "name": "comment"
            },
            "1": {
              "name": "keyword"
            },
            "2": {
              "name": "variable.other.object.js"
            },
            "3": {
              "name": "punctuation.accessor.ts"
            },
            "4": {
              "name": "variable.other.property.js"
            },
            "5": {
              "name": "string",
              "patterns": [
                {
                  "match": "\\b(compact|fullOutput|silent|inline)\\b",
                  "captures": {
                    "0": {
                      "name": "keyword"
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "match": "^//\\s*(@)(raycast)(\\.)(argument[1-3])\\s+(.*)",
          "captures": {
            "0": {
              "name": "comment"
            },
            "1": {
              "name": "keyword"
            },
            "2": {
              "name": "variable.other.object.js"
            },
            "3": {
              "name": "punctuation.accessor.ts"
            },
            "4": {
              "name": "variable.other.property.js"
            },
            "5": {
              "patterns": [
                {
                  "include": "source.js"
                }
              ]
            }
          }
        }
      ]
    }
  }
}